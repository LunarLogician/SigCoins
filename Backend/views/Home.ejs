        /* Profile Section */
        .profile {
            background-color: #001925; /* Profile background */
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
            margin: 20px 0; /* Space above and below */
            text-align: center; /* Center align text */
        }

        .profile img {
            width: 150px; /* Profile picture size */
            height: 150px; /* Profile picture size */
            border-radius: 50%; /* Circular image */
            margin-bottom: 15px; /* Space below the image */
        }

        /* Company Information Section */
        .company-info {
            background-color: #001925; /* Company info background */
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
            margin: 20px 0; /* Space above and below */
        }

        /* Card Styles */
        .card {
            background-color: #002733; /* Card background */
            border: none; /* Remove border */
            border-radius: 10px; /* Rounded corners */
            margin-bottom: 20px; /* Space between cards */
        }

        .card-header {
            background-color: #caf438; /* Header background color */
            color: #001925; /* Header text color */
            font-weight: bold; /* Bold text for card header */
        }

        .card-body {
            color: #e0e0e0; /* Card text color */
        }

        /* Icon Styles */
        .card-icon {
            width: 40px; /* Icon size */
            height: 40px; /* Icon size */
            margin-right: 10px; /* Space between icon and text */
        }
    </style>
</head>
